{% import "_includes/forms" as forms %}

<div class="field">
    <div class="heading">
        <label for="buildHook">
            Netlify Build Hook
        </label>
        <div class="instructions">
            add your <a href="https://www.netlify.com/docs/webhooks/#incoming-webhooks">Build Hooks</a></br>
        </div>
        <div class="input">
            {{
                forms.editableTable({
                    id: 'buildHooks',
                    name: 'buildHooks',
                    addRowLabel: 'Add a buildHook',
                    cols: {
                        name: {
                            heading: 'Name',
                            type: 'singleline'
                        },
                        url: {
                            heading: 'URL',
                            type: 'singleline'
                        },
                        badge: {
                            heading: 'Netlify Badge Link',
                            type: 'singleline'
                        }
                    },
                    rows: settings['buildHooks']
                })
            }}
        </div>
    </div>
</div>


